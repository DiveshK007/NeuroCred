# QIE Blockchain Configuration
# RPC URL for QIE Testnet (use rpc1testnet.qie.digital, not the explorer URL)
QIE_RPC_URL=https://rpc1testnet.qie.digital/
QIE_TESTNET_RPC_URL=https://rpc1testnet.qie.digital/
QIE_TESTNET_CHAIN_ID=1983
QIE_EXPLORER_URL=https://testnet.qie.digital
QIE_EXPLORER_TX_URL_PREFIX=https://testnet.qie.digital/tx

# Contract Addresses (populate after deployment)
# CreditPassportNFT contract address (use CREDIT_PASSPORT_NFT_ADDRESS for consistency)
CREDIT_PASSPORT_NFT_ADDRESS=0xYourContractAddress
# Legacy name (also supported for backward compatibility)
CREDIT_PASSPORT_ADDRESS=0xYourContractAddress

# Optional contract addresses
STAKING_ADDRESS=0xYourStakingAddress
LENDING_VAULT_ADDRESS=0xYourLendingVaultAddress
DEMO_LENDER_ADDRESS=0xYourDemoLenderAddress
NCRD_TOKEN_ADDRESS=0xYourNCRDTokenAddress

# Oracle Configuration (optional)
QIE_ORACLE_USD_ADDR=0xYourOracleAddress

# Backend Wallet Configuration
# Private key of the backend wallet (must have SCORE_UPDATER_ROLE on contract)
# Required for mintOrUpdate transactions
BACKEND_PRIVATE_KEY=0xYourBackendPrivateKey
# Alternative: Use encrypted private key via secrets manager
# BACKEND_PRIVATE_KEY_ENCRYPTED=encrypted_key_here

# AI Signer Configuration (for loan offer signing)
# Private key for signing EIP-712 loan offers (can be same as BACKEND_PRIVATE_KEY)
AI_SIGNER_PRIVATE_KEY=0xYourAISignerPrivateKey
# Backend wallet address (derived from private key, but can be set explicitly)
BACKEND_ADDRESS=0xYourBackendAddress

# Authentication & Security
JWT_SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Keys (comma-separated list of valid API keys)
API_KEYS=your-api-key-1,your-api-key-2

# Secrets Encryption (for encrypting sensitive env vars)
SECRETS_ENCRYPTION_KEY=change-this-to-32-byte-key-in-production

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Redis Configuration (optional, for caching and async tasks)
REDIS_URL=redis://localhost:6379
RQ_REDIS_URL=redis://localhost:6379/2

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Database (optional, for persistent storage)
DATABASE_URL=postgresql://user:password@localhost:5432/neurocred

# Monitoring & Observability
SENTRY_DSN_BACKEND=your-sentry-dsn
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_ENABLE_TRACING=true
METRICS_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true
CACHE_ENABLED=true

# Audit Logging
AUDIT_LOG_DIR=logs
LOG_FILE=logs/app.log
