# QIE Testnet Configuration
# RPC URL for QIE Testnet (use rpc1testnet.qie.digital, not the explorer URL)
QIE_TESTNET_RPC_URL=https://rpc1testnet.qie.digital/
QIE_RPC_URL=https://rpc1testnet.qie.digital/

# QIE Testnet Chain ID (1983 for QIE Testnet)
QIE_TESTNET_CHAIN_ID=1983

# Deployer Configuration
# Private key of the account that will deploy contracts (must have QIE for gas)
PRIVATE_KEY=0xYOUR_DEPLOYER_PRIVATE_KEY

# Backend Configuration
# Wallet address of the backend service (will be granted SCORE_UPDATER_ROLE automatically)
BACKEND_WALLET_ADDRESS=0xYOUR_BACKEND_WALLET_ADDRESS
BACKEND_ADDRESS=0xYOUR_BACKEND_WALLET_ADDRESS

# Contract Addresses (populated after deployment)
# CreditPassportNFT contract address (use CREDIT_PASSPORT_NFT_ADDRESS for consistency)
CREDIT_PASSPORT_NFT_ADDRESS=0xYourContractAddress
# Legacy name (also supported for backward compatibility)
CREDIT_PASSPORT_ADDRESS=0xYourContractAddress

# NCRD Token Configuration
# NCRD token address (create via QIEDex or deploy MockERC20)
# Required for NeuroCredStaking deployment
NCRD_TOKEN_ADDRESS=0xYourNCRDTokenAddress

# Optional: Explorer API key for contract verification
QIE_EXPLORER_API_KEY=your-explorer-api-key
ETHERSCAN_API_KEY=your-explorer-api-key
